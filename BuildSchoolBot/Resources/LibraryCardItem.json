{
    "type": "ColumnSet",
    "columns": [
        {
            "type": "Column",
            "items": [
                {
                    "type": "Image",
                    "style": "Person",
                    "url": "https://pbs.twimg.com/profile_images/3647943215/d7f12830b3c17a5a9e4afcc370e3a37e_400x400.jpeg",
                    "size": "Small"
                }
            ],
            "width": "auto",
            "verticalContentAlignment": "Center"
        },
        {
            "type": "Column",
            "items": [
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "${creator.name}",
                    "wrap": true,
                    "color": "Warning"
                },
                {
                    "type": "TextBlock",
                    "spacing": "None",
                    "text": "Created {{DATE(${createdUtc},SHORT)}}",
                    "wrap": true,
                    "size": "Small",
                    "fontType": "Default",
                    "color": "Accent"
                }
            ],
            "width": "stretch"
        },
        {
            "type": "Column",
            "width": "auto",
            "items": [
                {
                    "type": "ActionSet",
                    "title": "Click me for messageBack",
                    "horizontalAlignment": "Center",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Delete",
                            "style": "destructive",
                            "data": {
                                "msteams": {
                                    "type": "messageBack",
                                    "text": "DeletedLibrary",
                                    "value": "{\"bfKey\": \"bfVal\", \"conflictKey\": \"from value\"}"
                                }
                            }
                        }
                    ]
                }
            ],
            "horizontalAlignment": "Center",
            "minHeight": "0px",
            "verticalContentAlignment": "Center"
        }
    ],
    "style": "emphasis"
}