{
    "type": "ColumnSet",
    "columns": [
        {
            "type": "Column",
            "items": [
                {
                    "type": "Image",
                    "style": "Person",
                    "url": "https://pbs.twimg.com/profile_images/3647943215/d7f12830b3c17a5a9e4afcc370e3a37e_400x400.jpeg",
                    "size": "Small"
                }
            ],
            "width": "auto"
        },
        {
            "type": "Column",
            "items": [
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "${creator.name}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "spacing": "None",
                    "text": "Created {{DATE(${createdUtc},SHORT)}}",
                    "isSubtle": true,
                    "wrap": true
                }
            ],
            "width": "stretch"
        },
        {
            "type": "Column",
            "width": "stretch",
            "items": [
                {
                    "type": "ActionSet",
                    "title": "Click me for messageBack",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Delete",
                            "style": "destructive",
                            "data": {
                                "msteams": {
                                    "type": "messageBack",
                                    "displayText": "Already Deleted",
                                    "text": "DeletedLibrary",
                                    "value": "{\"bfKey\": \"bfVal\", \"conflictKey\": \"from value\"}"
                                }
                            },
                            "horizontalAlignment": "Center"
                        }
                    ],
                    "horizontalAlignment": "Center",
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ]
}